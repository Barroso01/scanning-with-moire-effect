@article{Zhang:07,
author = {Song Zhang and Xiaolin Li and Shing-Tung Yau},
journal = {Appl. Opt.},
keywords = {Fringe analysis; Phase measurement; Fringe projection; Image resolution; Phase shift; Phase unwrapping; Three dimensional measurement; Three dimensional reconstruction},
number = {1},
pages = {50--57},
publisher = {Optica Publishing Group},
title = {Multilevel quality-guided phase unwrapping algorithm for real-time three-dimensional shape reconstruction},
volume = {46},
month = {Jan},
year = {2007},
url = {http://opg.optica.org/ao/abstract.cfm?URI=ao-46-1-50},
doi = {10.1364/AO.46.000050},
abstract = {A multilevel quality-guided phase unwrapping algorithm for real-time 3D shape measurement is presented. The quality map is generated from the gradient of the phase map. Multilevel thresholds are used to unwrap the phase level by level. Within the data points in each level, a fast scan-line algorithm is employed. The processing time of this algorithm is approximately18.3 ms for an image size of640{\texttimes}480 pixels in an ordinary computer. We demonstrate that this algorithm can be implemented into our real-time 3D shape measurement system for real-time 3D reconstruction. Experiments show that this algorithm improves the previous scan-line phase unwrapping algorithm significantly although it reduces its processing speed slightly.},
}
