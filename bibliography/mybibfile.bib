@article{Ghiglia:94,
author = {Dennis C. Ghiglia and Louis A. Romero},
journal = {J. Opt. Soc. Am. A},
keywords = {Adaptive optics; Fast Fourier transforms; Image processing; Interferometry; Phase noise; Phase unwrapping},
number = {1},
pages = {107--117},
publisher = {Optica Publishing Group},
title = {Robust two-dimensional weighted and unweighted phase unwrapping that uses fast transforms and iterative methods},
volume = {11},
month = {Jan},
year = {1994},
url = {http://opg.optica.org/josaa/abstract.cfm?URI=josaa-11-1-107},
doi = {10.1364/JOSAA.11.000107},
abstract = {Two-dimensional (2D) phase unwrapping continues to find applications in a wide variety of scientific and engineering areas including optical and microwave interferometry, adaptive optics, compensated imaging, and synthetic-aperture-radar phase correction, and image processing. We have developed a robust method (not based on any path-following scheme) for unwrapping 2D phase principal values (in a least-squares sense) by using fast cosine transforms. If the 2D phase values are associated with a 2D weighting, the fast transforms can still be used in iterative methods for solving the weighted unwrapping problem. Weighted unwrapping can be used to isolate inconsistent regions (i.e., phase shear) in an elegant fashion.},
}
%Unwrapping
@article{Huntley:93,
author = {J. M. Huntley and H. Saldner},
journal = {Appl. Opt.},
keywords = {Fringe analysis; Phase measurement; Phase unwrapping; Spatial frequency; Speckle interferometry; Speckle patterns},
number = {17},
pages = {3047--3052},
publisher = {Optica Publishing Group},
title = {Temporal phase-unwrapping algorithm for automated interferogram analysis},
volume = {32},
month = {Jun},
year = {1993},
url = {http://opg.optica.org/ao/abstract.cfm?URI=ao-32-17-3047},
doi = {10.1364/AO.32.003047},
abstract = {A new algorithm is proposed for unwrapping interferometric phase maps. Existing algorithms search the two-dimensional spatial domain for 2$\pi$ discontinuities: only one phase map is required, but phase errors can propagate outward from regions of high noise, corrupting the rest of the image. An alternative approach based on one-dimensional unwrapping along the time axis is proposed. It is applicable to an important subclass of interferometry applications, in which a sequence of incremental phase maps can be obtained leading up to the final phase-difference map of interest. A particular example is quasi-static deformation analysis. The main advantages are (i) it is inherently simple, (ii) phase errors are constrained within the high-noise regions, and (iii) phase maps containing global discontinuities are unwrapped correctly, provided the positions of the discontinuities remain fixed with time. The possibility of real-time phase unwrapping is also discussed.},
}
